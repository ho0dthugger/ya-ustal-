<Page x:Class="Тест.page.PageNewPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Тест.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageNewPassword">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Смена пароля" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Новый пароль:" Margin="0,5"/>
            <PasswordBox x:Name="txtNewPassword" Margin="0,5"/>

            <TextBlock Text="Подтвердите пароль:" Margin="0,5"/>
            <PasswordBox x:Name="txtConfirmPassword" Margin="0,5"/>

            <TextBlock x:Name="txtErrorMessage" Foreground="Red" Margin="0,10" TextWrapping="Wrap"/>

            <Button Content="Сменить пароль" Click="ChangePassword_Click" Margin="0,20" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>
