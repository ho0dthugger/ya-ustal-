<Page x:Class="Тест.page.PageAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Тест.page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuth">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="250">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="txtLogin"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="txtPassword"/>
            <TextBlock x:Name="txtStatus" TextWrapping="Wrap" TextAlignment="Center"/>
            <Button x:Name="Войти" Content="Войти" Click="Войти_Click"/>
        </StackPanel>
    </Grid>
</Page>
